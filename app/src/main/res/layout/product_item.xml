<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/radius_background_shape"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/vLayoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/vTvProductPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/radius_photo_shape"
            android:src="@drawable/ic_test" />

        <TextView
            android:id="@+id/vTvCoast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/anonymous_pro"
            android:text="17.90 Br"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vTvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/raleway"
            android:text="Ветчина и колбаски 21 см"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/vTvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/anonymous_pro"
            android:text="560 г"
            android:textColor="#B1B1B1"
            android:textSize="18sp" />
    </LinearLayout>

    <com.example.fooddelivery.presentation.utils.view.CountButton
        android:id="@+id/vBtnCountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vLayoutInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>
